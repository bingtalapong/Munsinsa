<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/profile.css">
</head>

<body>
  <div class="sidenav text-white  ">
    <div class="list-group list-group-flush mx-3">
      <div class="user-profile">
        <img src="/image/H2_2.jpg" alt="profile-pic" class="w-50 p-1 rounded-circle border border-3 border-dark">
        <hr>
        <a href="/" class="text-reset mt-2">Sign Out</a>
        <hr>
      </div>
      <a href="/shipper/profile">My Profile</a>
      <a href="">Delivery Orders</a>
    </div>
  </div>


  <div class="container pt-4" id="ship-order" style="padding: 10%; margin-left: 10%;">

    <div class="d-flex justify-content-center mt-2">
    </div>
    <div class="m-5">
      <table class="table">
        <thead>
          <tr>


            <th scope="col" class="col-2">Hub</th>
            <th scope="col" class="col-1">Address</th>
            <th scope="col" class="col-1">Price</th>
            <th scope="col" class="col-1">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(function(order) { %>
          <tr>

            <td><%= order.hub %></td>
            <td><%= order.address %></td>
            <td><%= order.price %></td>
            <td><button onclick="location.href = '/shipper/orders/delete/<%=order._id%>'">Delete</button></td>
            

          </tr>
          <% }); %>
        </tbody>

      </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </div>
</body>

</html>