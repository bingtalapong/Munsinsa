<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Products</title>
  <!-- Include Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/profile.css">
</head>

<body>

  <!-- Side Menu -->
  <div class="sidenav text-white  ">
    <div class="list-group list-group-flush mx-3">
      <div class="user-profile">
        <img src="/image/H3_3.jpg" alt="profile-pic" class="w-50 p-1 rounded-circle border border-3 border-dark">

        <hr>

        <a href="/" class="text-reset mt-2">Sign Out</a>
        <hr>
      </div>
      <a href="/vendor/profile">My Profile</a>
      <a href="/vendor/add">Add Product</a>
      <a href="/vendor/products">Products</a>
    </div>
  </div>

  <!-- main layout -->
  <main>
    <a href="#">
      <h1 style="margin-left: 1%" class="text-decoration-none">Back</h1>
    </a>
    <div class="container pt-4">


      <div class="product-list">
        <h1>Products</h1>
        <!-- List of products offered by vendors -->
        <ul class="row">
          <% products.forEach(product => { %>
          <li>
            <div class="card">
              <div class="card-body">
                <p class="product-name"><%= product.name %></p>
                <p class="product-brand"><%= product.brand %></p>
                <p class="product-price">Price: $<%= product.price %></p>
                <!-- Add more product details as needed -->
              </div>
            </div>
          </li>
          <% }); %>
        </ul>
      </div>
</body>

</html>